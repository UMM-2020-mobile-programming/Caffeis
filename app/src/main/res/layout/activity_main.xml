<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="68dp"
            android:layout_height="78dp"
            android:layout_marginTop="28dp"
            app:srcCompat="@drawable/logo"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:text="HOME"
            android:textColor="@color/gold"
            android:textSize="24dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/coffe"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="20dp"
                android:background="@drawable/roundedbutton"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_coffe" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="10dp"
                    android:text="COFFESHOP"
                    android:textColor="@color/gold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/restaurant"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/roundedbutton"
                android:clickable="true"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_retaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/ic_restaurant" />

                <TextView
                    android:id="@+id/text_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="RESTAURANT"
                    android:textColor="@color/gold" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button4"
            android:layout_width="330dp"
            android:layout_height="61dp"
            android:layout_margin="20dp"
            android:background="@drawable/roundedframe"
            android:text="CARI TEMPAT NONGKRONG TERDEKAT"
            android:textColor="@color/grey"
            android:layout_gravity="center_horizontal"
            />
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="330dp"
        android:layout_height="217dp"
        android:background="@drawable/roundedframe"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="SNACK TERFAVORIT"
            android:textColor="@color/grey"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="330dp"
            android:layout_height="217dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/roti"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_roti"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ROTI BAKAR"
                    android:textColor="@color/grey"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/martabak"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_martabak"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MARTABAK"
                    android:textColor="@color/grey"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/boba"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_boba"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ES BOBA"
                    android:textColor="@color/grey"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>